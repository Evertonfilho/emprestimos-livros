@model IEnumerable<EmprestimosModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Empréstimos</h1>
        <a type="button" class="btn btn-success mx-2" asp-controller="Emprestimo" asp-action="Cadastrar">Novo empréstimo</a>
    </div>

    <table class="table table-white table-hover">
        <thead>
            <tr>
                <th></th>
                <th scope="col">Recebedor</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Livro</th>
                <th scope="col">Ultima Atualização</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model is not null)
            {
                @foreach (var emprestimo in Model)
                {
                    <tr>
                        <td>@emprestimo.Id</td>
                        <th scope="row">@emprestimo.Recebedor</th>
                        <td>@emprestimo.Fornecedor</td>
                        <td>@emprestimo.LivroEmprestado</td>
                        <td>@emprestimo.DataEmprestimo</td>
                        <td>
                            <a asp-controller="Emprestimo" asp-action="Editar" asp-route-id="@emprestimo.Id" class="btn btn-info mx-2"><i class="bi bi-pencil-square"></i></a>
                            <a class="btn btn-danger mx-2" asp-controller="Emprestimo" asp-action="Excluir" asp-route-id="@emprestimo.Id"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>